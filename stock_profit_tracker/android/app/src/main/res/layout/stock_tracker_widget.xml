<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/widget_background"
    android:padding="12dp">

    <!-- Widget Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="8dp">
        
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_notification"
            android:tint="#1976D2" />
        
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="6dp"
            android:text="Stock Tracker"
            android:textColor="#1C1B1F"
            android:textSize="11sp"
            android:textStyle="bold" />
        
        <ImageView
            android:id="@+id/widget_refresh_btn"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@android:drawable/ic_popup_sync"
            android:tint="#1976D2"
            android:padding="2dp"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:contentDescription="Refresh" />
        
        <TextView
            android:id="@+id/widget_total_pl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="₹0.00"
            android:textColor="#00C853"
            android:textSize="13sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Column Headers -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingVertical="2dp"
        android:layout_marginBottom="4dp">
        
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="Stock"
            android:textColor="#6B7280"
            android:textSize="9sp" />
        
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:text="LTP"
            android:textColor="#6B7280"
            android:textSize="9sp"
            android:gravity="end" />
        
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:text="P&amp;L"
            android:textColor="#6B7280"
            android:textSize="9sp"
            android:gravity="end" />
    </LinearLayout>

    <!-- Stock Items Container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="top">

        <!-- Stock 0: Name | LTP | PnL -->
        <LinearLayout
            android:id="@+id/stock_item_0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingVertical="3dp"
            android:visibility="gone">
            
            <TextView
                android:id="@+id/widget_stock_0_symbol"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="TCS"
                android:textColor="#1C1B1F"
                android:textSize="10sp"
                android:textStyle="bold"
                android:maxLines="1"
                android:ellipsize="end" />
            
            <TextView
                android:id="@+id/widget_stock_0_ltp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:text="₹3450"
                android:textColor="#1C1B1F"
                android:textSize="10sp"
                android:gravity="end" />
            
            <TextView
                android:id="@+id/widget_stock_0_pl"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:text="+₹100"
                android:textColor="#00C853"
                android:textSize="10sp"
                android:textStyle="bold"
                android:gravity="end" />
        </LinearLayout>

        <!-- Stock 1: Name | LTP | PnL -->
        <LinearLayout
            android:id="@+id/stock_item_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingVertical="3dp"
            android:visibility="gone">
            
            <TextView
                android:id="@+id/widget_stock_1_symbol"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="INFY"
                android:textColor="#1C1B1F"
                android:textSize="10sp"
                android:textStyle="bold"
                android:maxLines="1"
                android:ellipsize="end" />
            
            <TextView
                android:id="@+id/widget_stock_1_ltp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:text="₹1520"
                android:textColor="#1C1B1F"
                android:textSize="10sp"
                android:gravity="end" />
            
            <TextView
                android:id="@+id/widget_stock_1_pl"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:text="+₹50"
                android:textColor="#00C853"
                android:textSize="10sp"
                android:textStyle="bold"
                android:gravity="end" />
        </LinearLayout>

        <!-- Stock 2: Name | LTP | PnL -->
        <LinearLayout
            android:id="@+id/stock_item_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingVertical="3dp"
            android:visibility="gone">
            
            <TextView
                android:id="@+id/widget_stock_2_symbol"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="RELIANCE"
                android:textColor="#1C1B1F"
                android:textSize="10sp"
                android:textStyle="bold"
                android:maxLines="1"
                android:ellipsize="end" />
            
            <TextView
                android:id="@+id/widget_stock_2_ltp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:text="₹2890"
                android:textColor="#1C1B1F"
                android:textSize="10sp"
                android:gravity="end" />
            
            <TextView
                android:id="@+id/widget_stock_2_pl"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:text="-₹25"
                android:textColor="#F44336"
                android:textSize="10sp"
                android:textStyle="bold"
                android:gravity="end" />
        </LinearLayout>
    </LinearLayout>

    <!-- Widget Footer -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="4dp">
        
        <TextView
            android:id="@+id/widget_stock_count"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="0 stocks"
            android:textColor="#757575"
            android:textSize="9sp" />
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@"
            android:textColor="#9CA3AF"
            android:textSize="8sp" />
        
        <TextView
            android:id="@+id/widget_update_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="--:--"
            android:textColor="#1976D2"
            android:textSize="9sp"
            android:textStyle="bold"
            android:layout_marginEnd="8dp" />
        
        <TextView
            android:id="@+id/widget_total_percentage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0.00%"
            android:textColor="#00C853"
            android:textSize="9sp"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>